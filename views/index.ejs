    <!-- Scripts -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            
            // 1. Initialize AOS (Animations)
            AOS.init({
                duration: 800,
                once: false,     // Changed to false: Animations replay every time you scroll
                mirror: true,    // Added: Elements animate out when scrolling past them
                offset: 100,
                easing: 'ease-out-cubic'
            });

            // 2. Mobile Menu Logic
            const mobileMenuBtn = document.getElementById('mobile-menu-btn');
            const mobileMenu = document.getElementById('mobile-menu');

            mobileMenuBtn.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });

            // Close menu when a link is clicked
            mobileMenu.querySelectorAll('a').forEach(link => {
                link.addEventListener('click', () => {
                    mobileMenu.classList.add('hidden');
                });
            });

            // 3. FAQ Accordion
            const faqContainer = document.getElementById('faq-container');
            if (faqContainer) {
                faqContainer.addEventListener('click', (event) => {
                    const button = event.target.closest('.faq-toggle');
                    if (!button) return;

                    const item = button.parentElement;
                    const content = item.querySelector('.faq-content');
                    const icon = button.querySelector('svg');

                    const isExpanded = button.getAttribute('aria-expanded') === 'true';

                    // Close all other open FAQs
                    document.querySelectorAll('.faq-toggle[aria-expanded="true"]').forEach(otherButton => {
                        if (otherButton !== button) {
                            otherButton.setAttribute('aria-expanded', 'false');
                            otherButton.nextElementSibling.classList.remove('faq-active');
                            otherButton.querySelector('svg').style.transform = 'rotate(0deg)';
                        }
                    });

                    // Toggle the current FAQ
                    if (isExpanded) {
                        button.setAttribute('aria-expanded', 'false');
                        content.classList.remove('faq-active');
                        icon.style.transform = 'rotate(0deg)';
                    } else {
                        button.setAttribute('aria-expanded', 'true');
                        content.classList.add('faq-active');
                        icon.style.transform = 'rotate(180deg)';
                    }
                });
            }
        });
    </script>
